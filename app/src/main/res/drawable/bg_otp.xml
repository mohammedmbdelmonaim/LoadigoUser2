<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Space is the next space for character input -->
    <item android:state_focused="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <corners android:radius="@dimen/_2sdp"/>
                    <stroke android:color="@color/gray_light4" android:width="@dimen/_1sdp"/>

                </shape>
            </item>
            <item android:drawable="@drawable/ic_edit_text_cursor" android:gravity="center" />
        </layer-list>
    </item>
    <!-- Space contains text -->
    <item android:state_checked="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/_2sdp"/>
            <stroke android:color="@color/gray_light4" android:width="@dimen/_1sdp"/>

        </shape>
    </item>

    <!-- PinEntryEditText is focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/_2sdp"/>
            <stroke android:color="@color/gray_light4" android:width="@dimen/_1sdp"/>

        </shape>
    </item>

    <!-- PinEntryEditText is not focused -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/_2sdp" />
            <stroke android:color="@color/gray_light4" android:width="@dimen/_1sdp"/>
        </shape>
    </item>
</selector>
